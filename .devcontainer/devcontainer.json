{
  "name": "ReversalEdge (Flutter)",
  "image": "mcr.microsoft.com/devcontainers/universal:2-linux",
  "features": {
    "ghcr.io/devcontainers/features/flutter:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/dart:1": {}
  },
  "forwardPorts": [3000, 8080],
  "postCreateCommand": "flutter doctor --android-licenses",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code"
      ]
    }
  }
}